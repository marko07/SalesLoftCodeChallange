<!-- Modal -->
<div class="modal fade" id="duplicatedUsersModal" tabindex="-1" role="dialog" aria-labelledby="charCountModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">These are the possible duplicated users.</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
            </tr>
          </thead>
          <tbody class="character-count">
            <% @duplicated_people.each do |person| %>
              <tr>
                <th scope="row"> <%= person["display_name"] %> </th>
                <td> <%= person["email_address"] %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
